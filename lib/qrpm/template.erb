
Name: <%= name %>
Summary: <%= summary %>
Version: <%= version %>
Release: <%= release %>
License: <%= license %>
Packager: <%= packager %>
<% if group -%>
Group: <%= group %>
<% end -%>
<% for pck in requires || [] -%>
Requires: <%= pck %>
<% end -%>
Source: %{name}.tar.gz
BuildRoot: <%= rootdir %>/tmp/%{name}-%{version}

%description
<%= description %>

%prep
%setup -n <%= name %>

%build
<% if make.nil? -%>
<% if has_configure? -%>
./configure
<% end -%>
<% if has_make? -%>
make
<% end -%>
<% elsif make -%>
<%= make %>
<% end -%>

%install
mkdir -p <%= nodes.map { |f| "%{buildroot}#{f.directory}" }.uniq.join(" ") %>
<% for file in files -%>
cp <%= file.file %> %{buildroot}<%= file.path %>
<% end -%>
<% for link in links -%>
touch %{buildroot}<%= link.path %>
<% end -%>

%files
<% for file in files -%>
<%= file.path %>
<% end -%>
<% for link in links -%>
%ghost <%= link.path %>
<% end -%>

%clean
%if "%{clean}" != ""
  rm -rf %{_topdir}/BUILD/%{name}
  [ $(basename %{buildroot}) == "%{name}-%{version}-%{release}.%{_target_cpu}" ] && rm -rf %{buildroot}
%endif

%post
<% for file in files.select(&:perm) -%>
chmod <%= file.perm %> <%= file.path %>
<% end -%>
<% for file in links -%>
ln -sf <%= link.link %> <%= link.path %>
<% end -%>

